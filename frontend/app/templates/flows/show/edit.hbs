{{#link-to 'flows.show'}} Tillbaka till visningssidan för flödet (utan att spara){{/link-to}}
<hr/>
<div class="form-horizontal">
  <div class="form-group">
    <label class="control-label col-sm-2">Namn</label>
    <div class="col-sm-10">
      {{input value=model.name class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">Beskrivning</label>
    <div class="col-sm-10">
      {{input value=model.description class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">Synlighet</label>
    <div class="col-sm-10">
      {{#x-select value=model.selectable class="form-control"}}
        {{#x-option value=true}}Detta flöde ska vara valbart i listor{{/x-option}}
        {{#x-option value=false}}Detta flöde ska inte vara valbart i listor{{/x-option}}
      {{/x-select}}
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2">Parameterar</label>
    <div class="col-sm-10">
      {{json-editor json=model.parameters modes=modes mode=parameters_mode name='parameters' id='jsoneditor3'}}
    </div>
  </div>
  {{#if errors.parameters}}
    <div class="col-sm-offset-2 alert alert-danger">
      {{#each errors.parameters as |error|}}
        {{error}}<br/>
      {{/each}}
    </div>
  {{/if}}
  <div class="form-group">
    <label class="control-label col-sm-2">Jobb-kataloger</label>
    <div class="col-sm-10">
      {{json-editor json=model.folder_paths modes=modes mode=folder_paths_mode name='folder_paths' id='jsoneditor2'}}
    </div>
  </div>
  {{#if errors.folder_paths}}
    <div class="col-sm-offset-2 alert alert-danger">
      {{#each errors.folder_paths as |error|}}
        {{error}}<br/>
      {{/each}}
    </div>
  {{/if}}
  <div class="form-group">
    <label class="control-label col-sm-2">Flödessteg</label>
    <div class="col-sm-10">
      {{json-editor json=model.flow_steps modes=modes mode=steps_mode name='steps' id='jsoneditor1'}}
    </div>
  </div>
  {{#if errors.steps}}
    <div class="col-sm-offset-2 alert alert-danger">
      {{#each errors.steps as |error|}}
        {{error}}<br/>
      {{/each}}
    </div>
  {{/if}}
  <div class="form-group">
    <div class="col-sm-offset-2">
      <button {{action 'save' model}} class="btn btn-primary">Spara</button> {{savingMessage}}
    </div>
  </div>
</div>
